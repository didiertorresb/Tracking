<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.informatiquemobile.tracking.TrackingMode"
    android:background="@drawable/image1">

    <TextView android:text="Tracking Mode" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS Mode"
        android:id="@+id/gpsMode"
        android:onClick="googleMapsGPS"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/wifiMode"
        android:layout_gravity="center"
        android:layout_alignEnd="@+id/wifiMode"
        android:layout_alignStart="@+id/wifiMode" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WIFI Mode"
        android:id="@+id/wifiMode"
        android:onClick="googleMapsWIFI"
        android:layout_above="@+id/gsmMode"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GSM Mode"
        android:id="@+id/gsmMode"
        android:onClick="googleMapsGSM"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/wifiMode"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frecuency Update"
        android:id="@+id/timeStory"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/gpsMode"
        android:layout_alignEnd="@+id/timeStoryNumber"
        android:layout_alignStart="@+id/timeStoryNumber" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/timeStoryNumber"
        android:layout_gravity="center"
        android:layout_above="@+id/timeStory"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:textColor="#ff000000" />

</RelativeLayout>
